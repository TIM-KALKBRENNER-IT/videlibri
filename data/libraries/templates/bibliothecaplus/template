<action id="internal-login">
  <page url="{$urlaccount}">
    <template><form>{
      let $names := //input/@name[contains(., "login")]
      return
      loginForm := form(., {"__EVENTTARGET": ($names[ends-with(., "cmdLogin")])[1], 
                            ($names[ends-with(., "txtUsername")])[1]: $username, 
                            ($names[ends-with(., "txtPassword")])[1]: $password  })
    }</form></template>
  </page>
</action>
