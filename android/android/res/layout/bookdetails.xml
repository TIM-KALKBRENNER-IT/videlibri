<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/bookdetailslayout">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bookDetailsRecyclerView" android:layout_gravity="right|center_vertical" android:choiceMode="none"
            android:cacheColorHint="@android:color/transparent" android:listSelector="@android:color/transparent"
            android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button" android:layout_weight="0" android:visibility="gone"/>
</LinearLayout>